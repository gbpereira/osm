
<%# encoding: utf-8 %>

var DOM = {}

$(document).ready(function() {
  DOM.DEFAULT_LAT = -23.533773;
  DOM.DEFAULT_LNG = -46.625290;
  DOM.DEFAULT_ZOOM = 4;
  DOM.form = $('#map-form');
  DOM.map = new RMMap('map', DOM.DEFAULT_LAT, DOM.DEFAULT_LNG, DOM.DEFAULT_ZOOM);

  function _init () {
    DOM.form.find('[data-marker]').each(function (aIndex) {
      new LocationBox($(this), DOM.map);
    });

    DOM.form.find('[data-route]').each(function (aIndex) {
      new RouteBox($(this), DOM.map);
    });
  };

  _init();
});
